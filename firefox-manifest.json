{
  "manifest_version": 2,
  "name": "YouTube Reasoner",
  "description": "Challenges whether or not you REALLY need to watch YouTube",
  "version": "0.9.0",
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "storage",
    "https://generativelanguage.googleapis.com/*",
    "*://*.youtube.com/*",
    "https://ai.hackclub.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles/modal.css"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-reasoner@will10145.github.io",
      "strict_min_version": "91.0"
    }
  }
}
